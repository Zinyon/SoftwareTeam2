<% layout('../layout/layout')%>


<form action="/student/update/<%=student.id%>" method="post">
  <h2>개인정보 수정</h2>

  <div class = "container1" align = "center">
   <h3>학번</h3>

  <input type="text" name="adm_year" placeholder="뒤의 연도 2자리만 입력해주세요" value="<%=student.adm_year%>">
  <h3>현재 학기</h3>
  <select name="semester" value="<%=student.semester%>">
    <option value="<%=student.semester%>" hidden><%=student.semester%></option>
    <option value="1학기">1학기</option>
    <option value="2학기">2학기</option>
    <option value="3학기">3학기</option>
    <option value="4학기">4학기</option>
    <option value="5학기">5학기</option>
    <option value="6학기">6학기</option>
    <option value="7학기">7학기</option>
    <option value="8학기">8학기</option>
    <option value="9학기">9학기</option>
    <option value="9학기초과">9학기초과</option>
  </select>
  
  <br>
  <h3>제1전공</h3>
  <select name="major1" value="<%=student.major1%>">
     <option value="<%=student.major1%>" hidden><%=student.major1%></option>
      <% for(var i = 0; i< major_list.length; i++) {%>
        <option value="<%= major_list[i] %>"><%= major_list[i] %></option>
      <% }; %>
  </select>
  <br>
  <h3>제2전공</h3>
  <select name="major2" value="<%=student.major2%>">
      <option value="<%=student.major2%>" hidden><%=student.major2%></option>
      <% for(var i = 0; i< minor_list.length; i++) {%>
        <option value="<%= minor_list[i] %>"><%= minor_list[i] %></option>
      <% }; %>
  </select>
  
  <br>
  <h3>제3전공</h3>
  <select name="major3" value="<%=student.major3%>">
      <option value="<%=student.major3%>" hidden><%=student.major3%></option>
      <% for(var i = 0; i< minor_list.length; i++) {%>
        <option value="<%= minor_list[i] %>"><%= minor_list[i] %></option>
      <% }; %>
  </select>
  <p>
    <input type="submit">
  </p>
</div>
</form>
